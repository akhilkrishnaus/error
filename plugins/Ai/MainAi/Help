from pyrogram import Client, filters
from pyrogram.types import InlineKeyboardButton, InlineKeyboardMarkup, Message

# Function to handle the /helps command
@Client.on_message(filters.command("helps"))
def helps(client: Client, message: Message):
    # Image input
    image_url = "https://graph.org/file/f56b75ea6e8db95d30fc6.jpg"
    chat_id = message.chat.id
    client.send_photo(chat_id=chat_id, photo=image_url)

    # Inline keyboard buttons
    keyboard = [
        [InlineKeyboardButton("𝘊𝘙𝘌𝘈𝘛𝘌 𝘊𝘓𝘖𝘕𝘌 𝘉𝘖𝘛", url="https://t.me/autofilterclonebot")],
        [InlineKeyboardButton("ᴅᴏɴᴀᴛɪᴏɴ", callback_data='donate')],
        [InlineKeyboardButton("ᴀɪ", callback_data='ai')],
        [InlineKeyboardButton("ɪᴍᴀɢɪɴᴇ", callback_data='imagine')],
        [InlineKeyboardButton("ᴄʜᴇᴄᴋ", callback_data='check')],
        [InlineKeyboardButton("ᴜᴩꜱᴄᴀʟᴇ", callback_data='upscale')],
        [InlineKeyboardButton("ᴀɴɪᴍᴇ", callback_data='anime')],
        [InlineKeyboardButton("ᴩʀᴏᴍᴏᴛᴇ", callback_data='promote')],
        [InlineKeyboardButton("ɪᴍɢ", callback_data='img')],
        [InlineKeyboardButton("ꜰᴏɴᴛ", callback_data='font')],
        [InlineKeyboardButton("ꜱᴛɪᴄᴋᴇʀꜱ", callback_data='stickers')],
        [InlineKeyboardButton("ᴛᴛꜱ", callback_data='tts')],
        [InlineKeyboardButton("ʙᴜɢꜱ", callback_data='bugs')],
        [InlineKeyboardButton("ꜰᴇᴇᴅ", callback_data='feed')],
        [InlineKeyboardButton("ᴏᴩᴇɴᴀɪ", callback_data='openai')],
        [InlineKeyboardButton("ɢᴏᴏɢʟᴇ", callback_data='google')],
        [InlineKeyboardButton("ᴇᴄʜᴏ", callback_data='echo')],
        [InlineKeyboardButton("𝙾𝙿𝙴𝙽 𝙸𝙽 𝙶𝚁𝙾𝚄𝙿", callback_data='open_group')],
        [InlineKeyboardButton("𝙾𝙿𝙴𝙽 𝙸𝙽 𝙿𝚁𝙸𝚅𝙰𝙲𝚈", callback_data='open_privacy')],
        [InlineKeyboardButton("Close", callback_data='close')]
    ]

    reply_markup = InlineKeyboardMarkup(keyboard)
    message.reply_text('Choose an option:', reply_markup=reply_markup)

# Callback query handler for button clicks
@Client.on_callback_query()
def button(client: Client, callback_query):
    data = callback_query.data

    commands = {
        'donate': 'ᴅᴏɴᴀᴛɪᴏɴ\n\n💵 ɪ ʀᴇǫᴜᴇsᴛᴇᴅ ᴛᴏ ʏᴏᴜ 💸\n\nᴘʟᴇᴀsᴇ ᴅᴏɴᴀᴛᴇ ᴛʜᴇ ᴅᴇᴠᴇʟᴏᴘᴇʀ ꜰᴏʀ ᴋᴇᴇᴘɪɴɢ ᴛʜᴇ sᴇʀᴠɪᴄᴇ ᴀʟɪᴠᴇ & ᴋᴇᴇᴘ ʙʀɪɴɢɪɴɢ ᴍᴏʀᴇ ɴᴇᴡ ꜰᴇᴀᴛᴜʀᴇs ꜰᴏʀ ʏᴏᴜ.... ɪᴛ ᴡɪʟʟ sᴜᴘᴘᴏʀᴛ ᴜs ᴛᴏ ᴋᴇᴇᴘ ᴏᴜʀ ʙᴏᴛ ᴏɴ ᴠᴘs ᴀɴᴅ sᴏ ᴛʜᴀᴛ ᴡᴇ ᴄᴀɴ ᴋᴇᴇᴘ ᴜᴘʟᴏᴀᴅɪɴɢ ᴍᴏᴠɪᴇs ᴀɴᴅ ᴡᴇʙsᴇʀɪᴇs ɴᴏɴ sᴛᴏᴘ ɪɴ ʙᴇsᴛ ǫᴜᴀʟɪᴛɪᴇs..\n\nʏᴏᴜ ᴄᴀɴ ᴅᴏɴᴀᴛᴇ ᴀɴʏ ᴀᴍᴏᴜɴᴛ ʏᴏᴜ ʜᴀᴠᴇ 💷\n\n᚜ ᴘᴀʏᴍᴇɴᴛ ᴍᴇᴛʜᴏᴅs ᚛\n\n➢ ᴜᴘɪ ᴏʀ ʀᴇᴅᴇᴇᴍ ᴄᴏᴅᴇ\n\nᴄᴏɴᴛᴀᴄᴛ ᴍᴇ ғᴏʀ ᴋɴᴏᴡ ᴀʙᴏᴜᴛ ᴛʜᴇ ᴘᴀʏᴍᴇɴᴛ ɪɴғᴏ\n\nᴄʟɪᴄᴋ ʜᴇʀᴇ - @ChatbotintelegramBot',
        'ai': 'AI Module:\nUse the following commands:\n<code>/imagine a boy and girl looking at the sky</code>\n<code>/check 342663651415103</code>',
        'imagine': 'Usage:\n<code>/imagine a boy and girl looking at the sky</code>',
        'check': 'Usage:\n<code>/check 342663651415103</code>',
        'upscale': 'Reply to any image using this command: /upscale\nWait a few seconds and see the magic ✨',
        'anime': 'Usage:\n<code>/anime Boruto</code> to get information about the anime.',
        'promote': 'You can make members in your group admin 📈\nby using this command: /promote\nYou can remove them as admin using this command: /demote',
        'img': 'Usage:\n<code>/img Tony Stark</code>',
        'font': 'Usage:\n<code>/font {your_text}</code>\nExample: /font Hello',
        'stickers': 'Usage: Reply to any sticker with the command /stickerid.',
        'tts': 'Help: TTS 🎤 module\nTranslate text to speech\nCommands and usage:\n• /tts : convert text to speech',
        'bugs': 'You can report errors and bugs with the bot\nusing this command: /bug',
        'feed': 'If you want any feedback or features about the bot,\njust use this command: /feedback',
        'openai': 'Google AI Help\nCommands and usage:\n• /openai - [question] ask a question to ChatGPT.',
        'google': 'OpenAI Help\nCommands and usage:\n• /gemini - [question] ask a question to Google AI',
        'echo': 'This feature is very interesting and funny.\nGroup members reply with text,\nwhich will show that message replied and then our message will delete.\nUse: /echo {text}',
        'open_group': 'Use the /helps command in your group to see available commands.',
        'open_privacy': 'Use the /helps command in private chat to see available commands.'
    }

    if data in commands:
        callback_query.message.edit_text(commands[data], parse_mode='html')
