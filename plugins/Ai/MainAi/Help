from pyrogram import Client, filters
from pyrogram.types import InlineKeyboardButton, InlineKeyboardMarkup, Message

# Function to handle the /helps command
@Client.on_message(filters.command("helps"))
def helps(client: Client, message: Message):
    # Image input
    image_url = "https://graph.org/file/f56b75ea6e8db95d30fc6.jpg"
    chat_id = message.chat.id
    client.send_photo(chat_id=chat_id, photo=image_url)

    # Inline keyboard buttons
    keyboard = [
        [InlineKeyboardButton("ğ˜Šğ˜™ğ˜Œğ˜ˆğ˜›ğ˜Œ ğ˜Šğ˜“ğ˜–ğ˜•ğ˜Œ ğ˜‰ğ˜–ğ˜›", url="https://t.me/autofilterclonebot")],
        [InlineKeyboardButton("á´…á´É´á´€á´›Éªá´É´", callback_data='donate')],
        [InlineKeyboardButton("á´€Éª", callback_data='ai')],
        [InlineKeyboardButton("Éªá´á´€É¢ÉªÉ´á´‡", callback_data='imagine')],
        [InlineKeyboardButton("á´„Êœá´‡á´„á´‹", callback_data='check')],
        [InlineKeyboardButton("á´œá´©êœ±á´„á´€ÊŸá´‡", callback_data='upscale')],
        [InlineKeyboardButton("á´€É´Éªá´á´‡", callback_data='anime')],
        [InlineKeyboardButton("á´©Ê€á´á´á´á´›á´‡", callback_data='promote')],
        [InlineKeyboardButton("Éªá´É¢", callback_data='img')],
        [InlineKeyboardButton("êœ°á´É´á´›", callback_data='font')],
        [InlineKeyboardButton("êœ±á´›Éªá´„á´‹á´‡Ê€êœ±", callback_data='stickers')],
        [InlineKeyboardButton("á´›á´›êœ±", callback_data='tts')],
        [InlineKeyboardButton("Ê™á´œÉ¢êœ±", callback_data='bugs')],
        [InlineKeyboardButton("êœ°á´‡á´‡á´…", callback_data='feed')],
        [InlineKeyboardButton("á´á´©á´‡É´á´€Éª", callback_data='openai')],
        [InlineKeyboardButton("É¢á´á´É¢ÊŸá´‡", callback_data='google')],
        [InlineKeyboardButton("á´‡á´„Êœá´", callback_data='echo')],
        [InlineKeyboardButton("ğ™¾ğ™¿ğ™´ğ™½ ğ™¸ğ™½ ğ™¶ğšğ™¾ğš„ğ™¿", callback_data='open_group')],
